<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ticket.BottomSheetFragment"
    android:clipToPadding="false"
    android:id="@+id/design_bottom_sheet"
    android:paddingHorizontal="20dp"
    android:paddingBottom="200dp"
    >

    <ImageView
        android:id="@+id/img_swipe_line"
        android:layout_width="200dp"
        android:layout_height="6dp"
        android:layout_marginTop="20dp"
        android:src="@drawable/rectangle_swipe_line"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />
    <TextView
        android:id="@+id/txt_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="AAAAAAAAAAAAa"
        android:layout_marginTop="30dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/img_swipe_line"
        />
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.5"
        />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_continue"
        style="@style/CustomMaterialButton"
        android:text="CONTINUE"
        android:layout_marginTop="300dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_fav"
        style="@style/CustomMaterialButton"
        android:text="ADD TO FAV"
        app:layout_constraintTop_toBottomOf="@id/btn_continue"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:textColor="@color/main_blue"
        android:backgroundTint="@color/text_bg_gray"
        app:strokeWidth="2dp"
        app:strokeColor="@color/main_blue"
        />

</androidx.constraintlayout.widget.ConstraintLayout>